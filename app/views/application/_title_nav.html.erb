<h1 id="title">Hacker News </h1>
<% if session[:user_id] %>
      <h5 id="hello">Hello, <%=signed_in_user(session[:user_id])%></h5>
<% end %>
<nav>
  <ul>
  <li><%= link_to "Home", root_path %></li>
  <% if session[:user_id] %>
    <li><%= link_to "Create Post", new_post_path %></li>
    <li><%= link_to "Sign-out", session_path(session[:user_id]), method: :delete %></li>
  <% else %>
    <li><%= link_to "Sign-in", new_session_path %></li>
    <li><%= link_to "Sign-up", new_user_path %></li>
  <% end %>
  </ul>
</nav>
